{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../templates",
        "outDir": "dist/templates",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "../src/proto",
        "outDir": "dist/src/proto",
        "watchAssets": true
      },
      {
        "include": "../storage",
        "outDir": "dist/storage",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  },

  "generateOptions": {
    "spec": false
  }
}
